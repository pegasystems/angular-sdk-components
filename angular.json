{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": false
  },
  "version": 1,
  "newProjectRoot": "packages",
  "projects": {
    "test-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "packages/test-app",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "dist",
            "index": "packages/test-app/src/index.html",
            "main": "packages/test-app/src/main.ts",
            "polyfills": "packages/test-app/src/polyfills.ts",
            "tsConfig": "packages/test-app/tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/favicon.ico",
              {
                "glob": "authDone.{html,js}",
                "input": "./node_modules/@pega/auth/lib/oauth-client",
                "output": "./"
              },
              {
                "glob": "mdi.svg",
                "input": "./node_modules/@mdi/angular-material",
                "output": "./assets"
              },
              {
                "glob": "sdk-config.json",
                "input": "./",
                "output": "./"
              },
              {
                "glob": "bootstrap-shell.*",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation"
              },
              {
                "glob": "bootstrap-shell.*.*",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation"
              },
              {
                "glob": "lib_asset.json",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation"
              },
              {
                "glob": "constellation-core.*",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation/prerequisite"
              },
              {
                "glob": "constellation-core.*.*",
                "input": "./node_modules/@pega/constellationjs/dist/",
                "output": "./constellation/prerequisite"
              },
              {
                "glob": "*.*",
                "input": "./packages/test-app/src/assets/",
                "output": "./constellation/assets"
              },
              {
                "glob": "*.*",
                "input": "./packages/test-app/src/assets/icons/",
                "output": "./constellation/assets/icons"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/tinymce",
                "output": "./tinymce"
              }
            ],
            "styles": ["packages/test-app/src/styles.scss"],
            "scripts": ["./node_modules/tinymce/tinymce.min.js"],
            "customWebpackConfig": {
              "path": "./extra-webpack.config.js"
            },
            "allowedCommonJsDependencies": ["downloadjs", "rxjs/internal/observable/interval"]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "namedChunks": true,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": true,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "browserTarget": "test-app:build:development",
            "port": 3500
          },
          "configurations": {
            "production": {
              "browserTarget": "test-app:build:production"
            },
            "development": {
              "browserTarget": "test-app:build:development"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "test-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "packages/test-app/src/test.ts",
            "polyfills": "packages/test-app/src/polyfills.ts",
            "tsConfig": "packages/test-app/tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": ["packages/test-app/src/favicon.ico", "packages/test-app/src/assets", "packages/test-app/src/assets/mdi.svg"],
            "styles": ["./node_modules/intl-tel-input/build/css/intlTelInput.css", "packages/test-app/src/styles.scss"],
            "scripts": []
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "test-app:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "test-app:serve:production"
            }
          }
        }
      }
    },
    "angular-sdk-components": {
      "projectType": "library",
      "root": "packages/angular-sdk-components",
      "sourceRoot": "packages/angular-sdk-components/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "packages/angular-sdk-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/angular-sdk-components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "packages/angular-sdk-components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "packages/angular-sdk-components/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  }
}
